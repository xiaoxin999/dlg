/* pages/login/login.wxss */
.loginHeader{
  width: 80%;
  margin:0px auto;
  text-align: center;
  color: #999999;
  font-size: 10pt;
}
.logoImg{
  display: block;
  width:46%;
  margin:0px auto;
  padding: 12px 0px;
}
.logoTxt{
  display: block;
  width: 100%;
}
.loginForm{
  margin-top:20%;
  display: block;
}
.section{
  padding:6px 2%;
  width: 92%;
  margin:0px auto;
  overflow: hidden;
}
.section input{
  width: 96%;
  padding: 0px 2%;
  height: 28pt;
  line-height: 28pt;
  border:1px solid #eeeeee;
  border-radius: 6px;
  font-size: 10pt;
}
.section input.verifyInput{
  width: 60%;
  float: left;
}
.error{
  color: red;
  font-size: 12px;
  display: block;
  height: 24px;
}
.verifyCodeBtn{
  float: right;
  width: 30%;
  text-align: center;
  height: 28pt;
  line-height: 28pt;
  font-size: 10pt;
  border:1px solid #eeeeee;
}
.loginBtn{
  width: 100%;
  height: 30pt;
  line-height: 30pt;
  margin:0px auto;
  background: #ffb552;
  color: #fff;
  font-size: 12pt;
}
.index_loading{
  width: 100%;
  margin:40pt auto;
  text-align: center;
}