/* pages/result/result.wxss */
@import "../../lib/font_icon/iconfont.wxss";
page{
  width:100%;
  height: 100%;
  overflow: hidden;
}
::-webkit-scrollbar{
  display: none;
}
.resultH{
    width: 100%;
    max-height: 120px;
    margin:0px auto;
    position: fixed;
    top: 0px;
    z-index: 10;
}
.resultHTitle{
  width:100%;
  margin:0px auto;
  position: absolute;
  color: #fff;
  text-align: center;
  font-size: 12pt;
  z-index: 1;
  top: 0px;
}
.resultImg{
  width: 70px;
  height: 70px;
  margin:12px auto 6px;
  background: rgba(255,255,255,.2);
  border-radius: 50%;
  position: relative;
}
.resultImg img{
  border-radius: 50%;
}
.resultScore{
  position: absolute;
  z-index: 4;
  bottom:36px;
  right: 35%;
  font-size:10pt;
}
.resultContent{
  margin-top:120px;
  height:100%;
  overflow: hidden;
}
.resultTabs{
  width:100%;
  margin:0px auto;
}
.resultTabs ul{
  width: 100%;
  overflow: hidden;
}
.resultTabs ul li{
  width: 50%;
  float: left;
  height: 36px;
  line-height: 36px;
  text-align: center;
  color: #333;
  border-bottom: 1px solid #efefef;
}
.resultTabs ul li.active{
  color: #ffb353;
  border-bottom: 1px solid #ffb353;
}
.resultWrapper{
  width: 100%;
  height:100%;
  overflow: hidden;
}
.resultLeft{
  float:left;
  height:100%;
  width:28%;
}
.resultMenu{
  width:100%;
  /* height: 1280px; */
  height:100%;
  padding-bottom: 3rem;
  background: #efefef;
}
.resultMenu view{
  width:100%;
  height:32px;
  line-height: 32px;
  padding:6px 0px;
  list-style: none;
  text-align: center;
  cursor: pointer;
  font-size: 14pt;
}
.resultMenu view i{
  display: inline-block;
  margin:0px 6px 0px 0px;
  font-size: 16pt;
}
.resultMenu view.active {
    background: #fff;
    color: #ffb353;
}
i.icon-juchanghuangguan{
    color: #69c6ff;
    font-size: 20pt;
}
i.icon-dianzanmw{color:#d080ed;}
i.icon-1{color:#f8ca50;}
i.icon-jinggao{color:#42d25d;}
i.icon-mingpian{color:#2fc3de;}
i.icon-qinglv{color:#fe705d;}
i.icon-jianyi{color:#1296db;margin-top:12px;}
.resultRight{
  float:right;
  width:66%;  
  padding:2%;
  font-size: 12pt;
  color: #888;
  line-height: 22px;
  text-align: justify;
  height: 90%;
  overflow: auto;
}
.title{
  font-size: 14pt;
    color: #666;
    border-left:4px solid #ffb353;
    padding-left: 6px;
    margin: 6px 0px;
}
.text{
  text-indent: 1em;
  padding-bottom: 3rem;
}
.uploadFile{
    display: inline-block;
    padding: 0.6rem;
    color: #ffb353;
}
.resultFooter{
  position: fixed;
  bottom:0;
  z-index: 4;
  width: 96%;
  padding: 2%;
  background: #fff;
}
.resultBtn{
  width: 100%;
  margin:0px auto;
  height: 30pt;
  line-height: 30pt;
  background: #ffb353;
  color: #fff;
  font-size: 12pt;
  text-align: center;
  border-radius: 6px;
}