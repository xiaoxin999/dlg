@import "../../lib/font_icon/iconfont.wxss";

.camaraPhoto {
  width: 100%;
  margin: 0px auto;
  text-align: center;
}
.errorMsg {
  width: 100%;
  color: red;
  font-size: 12pt;
  text-align: center;
  display: block;
  max-height: 450px;
  line-height: 225px;
}
.errorMsg1 {
  width: 80%;
  margin:0px auto;
  display: block;
  color: red;
  font-size: 10pt;
  text-align: center;
  max-height: 450px;
}
.errorMsg1 i {
  display: block;
  font-size: 2.5rem;
  margin:40px auto;
}
.rejectReason{
  width: 100%;
  text-align: left;
  color: #333;
  margin-top: 15px;
  line-height: 24px;
}
.errorMsg1 image{
  width: 100%;
  max-height: 180px;
}
.photographButton {
  width: 80%;
  margin: 20px auto 0px;
  text-align: center;
  font-size: 12pt;
  color: #666;
}

.camaraFooter {
  position: fixed;
  width: 98%;
  bottom: 0;
  background: #fff;
  padding: 6px 1%;
  margin: 0px auto;
  text-align: center;
}

.ewmImg {
  display: block;
  width: 30%;
  margin: 0px auto;
  font-size: 10pt;
  color: #666;
  text-align: center;
  line-height: 22px;
}

.ewmImg img {
  display: block;
}
